<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="filename">logs</Property> <!-- Define the directory for log files -->
    </Properties>
    <Appenders>
        <RollingFile name="RollingFileAppender" 
                     fileName="${filename}/logdemo-${date:yyyy-MM-dd}.log"
                     filePattern="${filename}/logdemo-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>